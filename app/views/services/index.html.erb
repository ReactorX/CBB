<p id="notice"><%= notice %></p>

<h1>Lista usług</h1>

<table>
  <thead>
    <tr>
      <th>Nazwa usługi</th>
      <th>Cena firmy</th>
      <th>Cena lekarza</th>
      <th>Date in</th>
      <th>Date out</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name_services %></td>
        <td><%= service.company_price %></td>
        <td><%= service.doctor_price %></td>
        <td><%= service.date_in %></td>
        <td><%= service.date_out %></td>
        <td><%= link_to 'Pokaż', service %></td>
        <td><%= link_to 'Edytuj', edit_service_path(service) %></td>
        <td><%= link_to 'Usuń', service, method: :delete, data: { confirm: 'Czy masz pewność?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

