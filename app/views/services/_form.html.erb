<%= form_for(@service) do |f| %>
  <% if @service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@service.errors.count, "error") %> Nie udało się dodać usługi:</h2>

      <ul>
      <% @service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="form-group input-group">                                  
    <span class="input-group-addon">Nazwa usługi</span>
    <%= f.text_field :name_services, class: "form-control" %>
  </div>
 <div class="form-group input-group">                                  
    <span class="input-group-addon">Cena usługi wg. kliniki</span>
    <%= f.text_field :company_price, class: "form-control" %>
  </div>
 <div class="form-group input-group">                                  
    <span class="input-group-addon">Cena usługi wg. lekarza</span>
    <%= f.text_field :doctor_price, class: "form-control" %>
  </div>

 <div class="form-group input-group">                                  
    <span class="input-group-addon">Data początkowa</span>
    <%= f.date_select :date_in, class: "form-control" %>
  </div>
 <div class="form-group input-group">                                  
    <span class="input-group-addon">Data końcowa</span>
    <%= f.date_select :date_out, class: "form-control" %>
  </div>
 <div class="form-group input-group">                                  
    <span class="input-group-addon">Kategoria usługi</span>
    <%= f.collection_select(:category_id, Category.all, :id, :name_category) %>
    <%#= f.select :insurer_id %>
  </div>
 

  <div class="actions">
    <%= f.submit "Wykonaj", class: "btn btn-primary" %>
  </div>
<% end %>
