<%= form_for(@doctor) do |f| %>
  <% if @doctor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@doctor.errors.count, "error") %> Nie udało się dodać lekarza:</h2>

      <ul>
      <% @doctor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="form-group input-group">                                  
    <span class="input-group-addon">Numer PWZ</span>
    <%= f.text_field :pwz_number, class: "form-control" %>
  </div>
  <div class="form-group input-group">                                  
    <span class="input-group-addon">Imię lekarza</span>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group input-group">                                  
    <span class="input-group-addon">Nazwisko lekarza</span>

    <%= f.text_field :surname, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Wykonaj",  class: "btn btn-primary"  %>
  </div>
<% end %>
