<p id="notice"><%= notice %></p>

<ol class="breadcrumb">
<li><%= link_to "Strona Główna", :back, {:style =>'color:#428BCA'} %></li>
<li><a class="color:#428BCA" href="#">Lista lekarzy</a></li>
</ol> 
<%= link_to 'Dodaj nowego lekarza', new_doctor_path, class: "btn btn-primary", :style =>'color:white;' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Numer PWZ Lekarza</th>
      <th>Imię lekarza</th>
      <th>Nazwisko lekarza</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.pwz_number %></td>
        <td><%= doctor.name %></td>
        <td><%= doctor.surname %></td>
        <td><%= link_to 'Edytuj', edit_doctor_path(doctor), class:"btn btn-success", :style =>'color:white;'  %> <%= link_to 'Usuń', doctor, method: :delete, data: { confirm: 'Jesteś pewien?' },class:"btn btn-danger", :style =>'color:white;' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

