

<ol class="breadcrumb">
<li><%= link_to "Strona Główna", :back, {:style =>'color:#428BCA'} %></li>
<li><a class="color:#428BCA" href="#">Lista klinik</a></li>
</ol> 
<%= link_to 'Dodaj nową klinikę', new_content_clinic_path, class: "btn btn-primary", 
:style =>'color:white;'  %>
<table  class="table table-striped">
  <thead>
    <tr>
      <th width="30%">Nazwa kliniki</th>
      <th>Adres kliniki</th>
      <th>Miejscowość</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @content_clinics.each do |content_clinic| %>
      <tr>
        <td><%= content_clinic.name_clinic %></td>
        <td><%= content_clinic.adress_clinic %></td>
        <td><%= content_clinic.city_linic %></td>
        <td><%= link_to 'Edytuj', edit_content_clinic_path(content_clinic), class:'btn btn-success'  %>
        <%= link_to 'Usuń', content_clinic, method: :delete, data: { confirm: 'Jesteś pewien' },class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


