<p id="notice"><%= notice %></p>

<h1>Lista wizyt</h1>

<table>
  <thead>
    <tr>
      <th>Id clinic</th>
      <th>Id user</th>
      <th>Id patient</th>
      <th>Id services</th>
      <th>Data</th>
      <th>Id doctor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.id_clinic %></td>
        <td><%= appointment.id_user %></td>
        <td><%= appointment.id_patient %></td>
        <td><%= appointment.id_services %></td>
        <td><%= appointment.data %></td>
        <td><%= appointment.id_doctor %></td>
        <td><%= link_to 'Pokaż', appointment %></td>
        <td><%= link_to 'Edytuj', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Zniszcz', appointment, method: :delete, data: { confirm: 'Masz pewność?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Dodaj wizytę', new_appointment_path %>
