<p id="notice"><%= notice %></p>

<h1>Lista wizyt</h1>

<table>
  <thead>
    <tr>
      <th>Id user</th>
      <th>Id patient</th>
      <th>Id services</th>
      <th>Data</th>
      <th>Id doctor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
     
        <td><%= appointment.user_id %></td>
        <td><%= appointment.patient_id %></td>
        <td><%= appointment.service_id %></td>
        <td><%= appointment.data %></td>

        <td><%= appointment.doctor_id %></td>
        <td><%= link_to 'Pokaż', appointment %></td>
        <td><%= link_to 'Edytuj', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Usuń', appointment, method: :delete, data: { confirm: 'Czy masz pewność?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

